{
  "name": "xivstrat",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.14.0",
  "description": "XivStrat - FFXIV Strategy Guide",
  "author": "XivStrat Team",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "prebuild": "pnpm minify && astro check",
    "build": "astro build",
    "build:tauri": "astro build --config astro.config.tauri.mts",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "minify": "node cli/minify_public_scripts.js",
    "prepare": "husky",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:icon": "node cli/generate-icons.js",
    "build:electron": "astro build --config astro.config.electron.mts",
    "electron:dev": "node electron/dev.js",
    "electron:build": "pnpm build:electron && electron-builder --config electron/electron-builder.json"
  },
  "dependencies": {
    "@astrojs/vue": "5.1.0",
    "@nanostores/persistent": "1.1.0",
    "@nanostores/vue": "1.0.1",
    "@tailwindcss/vite": "4.1.11",
    "@vueuse/core": "13.6.0",
    "astro": "5.12.8",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "embla-carousel-vue": "8.6.0",
    "lucide-vue-next": "0.536.0",
    "mime-types": "3.0.1",
    "motion": "12.23.12",
    "motion-v": "1.7.0",
    "nanostores": "1.0.1",
    "pinyin-pro": "3.27.0",
    "pixi-filters": "6.1.4",
    "pixi.js": "8.11.0",
    "reka-ui": "2.4.1",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "1.3.6",
    "vue": "3.5.18",
    "zod": "4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.1.0",
    "@astrojs/check": "0.9.4",
    "@astrojs/ts-plugin": "1.10.4",
    "@tauri-apps/api": "2.5.0",
    "@tauri-apps/cli": "2.5.0",
    "electron": "36.5.0",
    "electron-builder": "26.0.12",
    "esbuild": "0.25.8",
    "eslint": "9.32.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-format": "1.0.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "sharp": "0.34.3",
    "sharp-cli": "5.1.0",
    "typescript": "5.9.2",
    "vite-svg-loader": "5.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@ffmpeg-installer/linux-x64",
      "@tailwindcss/oxide",
      "core-js",
      "cpu-features",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
