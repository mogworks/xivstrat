---
import Icon from '@/components/Icon.astro'
import { type DamageVariantType, damageVariantIconMap as map } from '@/lib/damage_variant'

interface Props {
  variant?: DamageVariantType
  variants?: DamageVariantType[]
}

const { variant = undefined, variants = [] }: Props = Astro.props

const single = variant !== undefined
---

{
  single ? (
    <Icon img={map[variant]} alt="" iconClass="scale-150" />
  ) : (
    variants.map((v) => {
      return <Icon img={map[v]} alt="" iconClass="scale-150" />
    })
  )
}
