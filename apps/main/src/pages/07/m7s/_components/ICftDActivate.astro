---
import Badge from '@/components/Badge.astro'
import Span from '@/components/Span.vue'
import EventSection from '@/components/section/EventSection.astro'
import type { Time } from '@/lib/utils'
import { translations } from '../_translations'

interface Props {
  time: Time
}

const { time }: Props = Astro.props
const itCameFromTheDirt = translations.itCameFromTheDirt
---

<EventSection time={time}>
  <Span variant="yellow">{itCameFromTheDirt}</Span>
  伤害判定
  <Badge variant="emerald">6m圆形</Badge>
  <Badge variant="yellow">钢铁</Badge>
</EventSection>
