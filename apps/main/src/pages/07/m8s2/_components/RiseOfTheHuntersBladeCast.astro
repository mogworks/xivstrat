---
import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'
import type { Time } from '@/lib/utils'
import { translations } from '../_translations'
import HowlingBlade from './entities/HowlingBlade.astro'

interface Props {
  start: Time
}

const { start }: Props = Astro.props
const duration = 6.7

const riseOfTheHuntersBlade = translations.riseOfTheHuntersBlade
---

<CastSection start={start} duration={duration} ability={riseOfTheHuntersBlade}>
  <HowlingBlade slot="source" />
  ，干扰传送装置
  <Badge variant="emerald">传送间隔+</Badge>
</CastSection>
