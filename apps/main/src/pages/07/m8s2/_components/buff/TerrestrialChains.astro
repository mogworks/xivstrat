---
import Buff from '@/components/Buff.astro'

import { translations } from '../../_translations'

interface Props {
  tag?: string
  hover?: boolean
}

const { tag = '', hover = false }: Props = Astro.props

const icon = 'imgs/buff/07/m8s2/214268.png'
const name = translations.terrestrialChains
const desp = translations.terrestrialChainsDesp
---

<Buff icon={icon} name={name} nameVariant="yellow" description={desp} tag={tag} hover={hover} />
