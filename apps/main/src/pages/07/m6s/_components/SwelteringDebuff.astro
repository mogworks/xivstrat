---
import Buff from '@/components/Buff.astro'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const sweltering = 'imgs/buff/07/m6s/214273.png'
const { Sweltering, SwelteringDescription } = translations
---

<Buff
  icon={sweltering}
  name={Sweltering}
  nameVariant="yellow"
  description={SwelteringDescription}
  tag={tag}
  hover={hover}
  class={className}
/>
