---
import Buff from '@/components/Buff.astro'

import { translations } from '../../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props

const windpack = 'imgs/buff/07/m8s1/214264.png'
const name = translations.windpack
const desp = translations.windpackDesp
---

<Buff icon={windpack} name={name} nameVariant="yellow" description={desp} tag={tag} hover={hover} class={className} />
