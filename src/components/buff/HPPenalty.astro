---
import Buff from '@/components/Buff.astro'

const icon = 'imgs/buff/215076.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={icon}
  name="体力衰减"
  nameVariant="yellow"
  description="体力最大值降低"
  tag={tag}
  hover={hover}
  class={className}
/>
