---
import Buff from '@/components/Buff.astro'

import icon from '@/assets/buff/215786.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={icon}
  name="斩击耐性降低"
  nameVariant="yellow"
  description="对抗斩击攻击的耐性有所降低"
  tag={tag}
  hover={hover}
  class={className}
/>
