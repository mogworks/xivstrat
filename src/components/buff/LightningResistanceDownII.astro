---
import Buff from '@/components/Buff.astro'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const icon = 'buff/215597.webp'
---

<Buff
  icon={icon}
  name="雷属性耐性大幅降低"
  nameVariant="yellow"
  description="对抗雷属性的耐性有显著降低"
  tag={tag}
  hover={hover}
  class={className}
/>
