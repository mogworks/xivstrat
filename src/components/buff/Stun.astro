---
import Buff from '@/components/Buff.astro'

const icon = 'imgs/buff/215004.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={icon}
  name="眩晕"
  nameVariant="yellow"
  description="无法做出任何行动"
  tag={tag}
  hover={hover}
  class={className}
/>
