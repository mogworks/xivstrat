---
import { cn } from '@/lib/utils'

interface Props {
  id?: string
  class?: string
  [key: string]: unknown
}

const { id = undefined, class: className = '', ...rest }: Props = Astro.props
---

{id && <div id={id} class="-mb-(--article-row-gap) h-0 scroll-mt-[calc(5rem+1px)]" />}
<section class={cn('strat-section grid grid-cols-[16rem_1fr]', className)} {...rest}>
  <slot />
</section>
