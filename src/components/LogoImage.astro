---
import CosImage from "@/components/CosImage.astro";

const XivStratLightLogo = "developer/group/XivStrat/XivStrat_light.webp";
const XivStratDarkLogo = "developer/group/XivStrat/XivStrat_dark.webp";
const XivStratHoverLogo = "developer/group/XivStrat/XivStrat_hover.webp";
---

<CosImage
  src={XivStratHoverLogo}
  alt="XivStrat"
  class="hidden h-8 w-auto -translate-x-5 scale-250 group-hover:block"
  draggable="false"
  loading="eager"
/>
<CosImage
  src={XivStratLightLogo}
  alt="XivStrat"
  class="h-8 w-auto -translate-x-5 scale-250 group-hover:hidden dark:hidden"
  draggable="false"
  loading="eager"
/>
<CosImage
  src={XivStratDarkLogo}
  alt="XivStrat"
  class="hidden h-8 w-auto -translate-x-5 scale-250 dark:block dark:group-hover:hidden"
  draggable="false"
  loading="eager"
/>
