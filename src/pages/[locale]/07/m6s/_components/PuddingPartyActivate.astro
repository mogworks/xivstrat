---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import DamageInfo from '@/components/DamageInfo.astro'
import Span from '@/components/Span.vue'
import EventSection from '@/components/section/EventSection.astro'

interface Props {
  time: Time
  base?: Time
  num: number
}

const { time, base = 0, num }: Props = Astro.props
---

<EventSection time={time} base={base}>
  <Span variant="yellow">Pudding Party</Span>
  第
  <Span variant="pink">{num}</Span>
  段伤害判定
  <DamageInfo damage="90000" type="magical" />
  <Badge variant="emerald">6m圆形</Badge>
  <Badge variant="yellow">八人分摊</Badge>
</EventSection>
