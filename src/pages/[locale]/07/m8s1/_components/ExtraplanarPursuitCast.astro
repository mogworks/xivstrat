---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBladeIcon from './HowlingBladeIcon.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const { start, base = 0, ...rest }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={3.7}
  ability='空間斬り'
  target
  damage='180000'
  damageType='physical'
  {...rest}
>
  <HowlingBladeIcon slot='source' />
  <Badge variant='pink'>AoE</Badge>
</CastSection>
