---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

interface Props {
  phase: 'p2' | 'p3'
  start: Time
  base?: Time
}

const { phase, start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={2.7} ability="Frogtourage">
  <Badge variant="emerald">{phase === 'p2' ? '“龙龙凤凤笨笨”' : '小运动会'}</Badge>
</CastSection>
