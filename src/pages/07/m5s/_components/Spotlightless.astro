---
import Buff from '@/components/Buff.astro'

import spotlightless from '@/assets/buff/07/m5s/214285.png'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={spotlightless}
  name={translations.spotlightless}
  nameVariant="yellow"
  description={translations.spotlightlessDesc}
  tag={tag}
  hover={hover}
  class={className}
/>
