---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'
import { translations } from '../_translations/index'

interface Props {
  start: Time
}

const { start }: Props = Astro.props
---

<CastSection
  start={start}
  duration={4.7}
  ability={translations.celebrateGoodTimes}
  target
  damage="180000"
  damageType="magical"
>
  <Badge variant="purple">AoE</Badge>
</CastSection>
