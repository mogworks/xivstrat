---
import Buff from '@/components/Buff.astro'

import α from '@/assets/buff/07/m5s/214281.png'
import β from '@/assets/buff/07/m5s/214282.png'
import { translations } from '../_translations'

interface Props {
  type: 'α' | 'β'
  tag?: string
  hover?: boolean
  class?: string
}

const { type, tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={type === 'α' ? α : β}
  name={translations.wavelength + ' ' + (type === 'α' ? 'α' : 'β')}
  nameVariant={type === 'α' ? 'amber' : 'indigo'}
  description={translations.waveLengthDesc}
  tag={tag}
  hover={hover}
  class={className}
/>
