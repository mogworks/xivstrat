---
import Buff from '@/components/Buff.astro'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const perfect_groove = 'imgs/buff/07/m5s/214283.png'
---

<Buff
  icon={perfect_groove}
  name={translations.perfectGroove}
  nameVariant="yellow"
  description={translations.perfectGrooveDesc}
  tag={tag}
  hover={hover}
  class={className}
/>
