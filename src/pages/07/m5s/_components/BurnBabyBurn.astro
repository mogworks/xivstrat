---
import Buff from '@/components/Buff.astro'
import { translations } from '../_translations/index'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const burn_baby_burn = 'buff/07/m5s/214280.webp'
---

<Buff
  icon={burn_baby_burn}
  name={translations.burnBabyBurn}
  nameVariant="yellow"
  description={translations.burnBabyBurnDesc}
  tag={tag}
  hover={hover}
  class={className}
/>
