---
import DutyStratLayout from '@/layouts/DutyStratLayout.astro'
import EventSection from '@/components/section/EventSection.astro'
import SeparatorSection from '@/components/section/SeparatorSection.astro'
import RoleIcon from '@/components/RoleIcon.astro'

import AttackSection from './_components/ZeleniaAttackSection.astro'
import ThornedCatharsis from './_components/ThornedCatharsisCast.astro'
import SpecterOfTheLost from './_mechanics/SpecterOfTheLost.astro'
import Shock from './_mechanics/Shock.astro'
import AlexandrianHoly from './_mechanics/AlexandrianHoly.astro'
import EscelonsFall from './_mechanics/EscelonsFall.astro'
import EscelonsFallActivate from './_components/EscelonsFallActivate.astro'

import StockBreakCast from './_components/StockBreakCast.astro'

import Zelenia from './_components/Zelenia.astro'

const dutyId = '07/zelenia'
const phase = 1
const base = 0
---

<DutyStratLayout dutyId={dutyId} phase={phase}>
  <EventSection>
    <RoleIcon role="tank" tag="MT" />
    开怪
    <!-- ，将
    <Zelenia />
    固定在场中偏南一点的位置 -->
  </EventSection>

  <ThornedCatharsis start="00:11.120" base={base} />

  <SeparatorSection id="shock" title="Shock" />
  <Shock start="00:18.574" base={base} type="all" />
  <AlexandrianHoly start="00:24.727" base={base} />

  <SeparatorSection id="specter-of-the-lost" title="Specter of the Lost" />
  <SpecterOfTheLost start="00:36.897" base={base} />

  <SeparatorSection id="escelons-fall" title="Escelons' Fall" />

  <EscelonsFall start="00:51.330" base={base} />

  <EscelonsFallActivate time="01:05.185" base={base} num={1} />
  <EscelonsFallActivate time="01:08.308" base={base} num={2} />
  <EscelonsFallActivate time="01:11.383" base={base} num={3} />
  <EscelonsFallActivate time="01:14.455" base={base} num={4} />

  <!-- <SeparatorSection id="stock-break" title="Stock Break 4连分摊" /> -->
  <StockBreakCast start="01:16.677" base={base} />
</DutyStratLayout>
