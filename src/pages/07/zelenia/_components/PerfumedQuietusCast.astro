---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import Zelenia from './Zelenia.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={2.7}
  ability="Perfumed Quietus"
  target
  damage="100000"
  damageType="magical"
>
  <Zelenia slot="source" />
  <Badge variant="purple">AoE</Badge>
</CastSection>
