---
import Buff from '@/components/Buff.astro'

import { translations } from '../../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props

const icon = 'buff/07/m8s1/214267.webp'
const name = translations.windborneEnd
const desp = translations.windborneEndDesp
---

<Buff icon={icon} name={name} nameVariant="yellow" description={desp} tag={tag} hover={hover} class={className} />
