---
import type { Time } from "@/lib/utils"

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBladeIcon from '../_components/HowlingBladeIcon.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const { start, base = 0, ...rest }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={3.7}
  ability="Extraplanar Pursuit"
  target
  damage="180000"
  damageType="physical"
>
  <HowlingBladeIcon slot="source" />
  <Badge variant="pink">AoE</Badge>
</CastSection>
