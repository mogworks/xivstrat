---
import Buff from '@/components/Buff.astro'

import hungry_for_victory from '@/assets/buff/07/m8s1/214287.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={hungry_for_victory}
  name="Hungry for Victory"
  nameVariant="yellow"
  description="Invigorated by the thrill of battle and commanding pack spirits to aid in combat."
  tag={tag}
  hover={hover}
  class={className}
/>
