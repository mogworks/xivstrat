---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBlade from '../_components/entities/HowlingBlade.astro'

interface Props {
  start: Time
  damage: string
  duration: Time
}

const { start, damage, duration }: Props = Astro.props

const ability = '風塵光狼斬'

//该技能伤害暂时是估值，logs写的太乱
---

<CastSection start={start} duration={duration} ability={ability} target damage={damage} damageType="physical">
  <HowlingBlade slot="source" />
  <Badge variant="purple">AoE</Badge>
</CastSection>
