---
import type { Time } from '@/lib/utils'

import AttackSection from '@/components/section/AttackSection.astro'
import HowlingBladeIcon from './HowlingBladeIcon.astro'

interface Props {
  time: Time
  base?: Time
}

const { time, base = 0 }: Props = Astro.props
---

<AttackSection time={time} base={base} damage="80000" damageType="physical">
  <HowlingBladeIcon slot="source" />
</AttackSection>
