---
import type { Time } from '@/lib/utils'

import CastSection from '@/components/section/CastSection.astro'
import Span from '@/components/Span.vue'
import Badge from '@/components/Badge.astro'

import WolfOfWind from './entities/WolfOfWind.astro'

import { translations } from '../_translations'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={2.2} ability={translations.roaringWind}>
  <WolfOfWind slot="source">
    <Span variant="green" class="-ml-0.5">风狼首×5</Span>
  </WolfOfWind>
  <Badge variant="emerald">8m宽直线</Badge>
</CastSection>
