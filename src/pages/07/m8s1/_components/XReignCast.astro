import CastSection from '@/components/section/CastSection.astro'
import Badge from '@/components/Badge.astro'

import HowlingBladeIcon from '../_components/HowlingBladeIcon.astro'

interface Props {
  time?: Time
  base?: Time
}

const { time, base = 0 }: Props = Astro.props

const duration = 4.8

