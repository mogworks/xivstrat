---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import WolfOfWind from '../_components/entities/WolfOfWind.astro'
import { translations } from '../_translations'

interface Props {
  start: Time
  base?: Time
}

const ability = translations.breathOfDecay

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={7.7} ability={ability}>
  <WolfOfWind slot="source" />
  <Badge variant="purple">AoE</Badge>
</CastSection>
