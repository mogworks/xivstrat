---
import Buff from '@/components/Buff.astro'

import stonepack from '@/assets/buff/07/m8s1/214265.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={stonepack}
  name="Stonepack"
  nameVariant="yellow"
  description="Bound by earth aether and unable to deal damage to the wolf of stone."
  tag={tag}
  hover={hover}
  class={className}
/>
