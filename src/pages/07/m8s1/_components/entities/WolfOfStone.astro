---
import Span from '@/components/Span.vue'

import Wolf from './Wolf.astro'

interface Props {
  order?: number
}

const { order = 0 }: Props = Astro.props
---

<Wolf type="stone" order={order}>
  <slot>
    <Span variant="orange" class="-ml-0.5">土狼首</Span>
    {
      order !== 0 && (
        <Span variant="orange" class="-ml-1">
          #{order}
        </Span>
      )
    }
  </slot>
</Wolf>
