---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'
import HowlingBladeIcon from './HowlingBladeIcon.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={4.7}
  ability="大地の呼び声"
  target="any"
  targetTag="随机"
  damage="共800000"
  damageType="magical"
>
  <HowlingBladeIcon slot="source" />
  <Badge variant="pink">8次连续分摊</Badge>
</CastSection>
