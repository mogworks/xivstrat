  <EventSection time="04:32.462"
    >对<RoleIcon role="any" tag="虚线" />施加连线<ThornsOfDeathDebuff hover /><Span variant="orange">9000/3s</Span>
    <Badge variant="orange">DoT</Badge></EventSection
  >
  <AttackSection time="04:31.880" base={base} damage="57000" damageType="physical" />
  <AbominableBlinkCast start="04:34.422" base={base} />
  <AbominableBlinkActivate time="04:40.745" base={base} />
  <DDAB base={base} />

  <AttackSection time="04:42.302" base={base} damage="57000" damageType="physical" />
  <SeparatorSection id="strange-seeds" title={strangeSeeds} />
  <StrangeSeeds base={base} />

  <SeparatorSection title=`${stoneringer} + ${brutishSwing} + ${glowerPower} + ${revengeOfTheVines}` />
