  <AttackSection time="05:42.223" base={base} damage="57000" damageType="physical" />
  <AttackSection time="05:45.255" base={base} damage="57000" damageType="physical" />

  <SeparatorSection title={powerslam} />
  <PowerSlamCast time="05:51.804" base={base} />
  <PowerSlamActivate time="05:51.804" base={base} />
</DutyStratLayout>
