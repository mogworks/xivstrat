---
import DutyStratLayout from '@/layouts/DutyStratLayout.astro'
import SeparatorSection from '@/components/section/SeparatorSection.astro'

import DraftWarning from '@/components/draft-warning/DraftWarning.astro'
import EventSection from '@/components/section/EventSection.astro'
import SBGR from './_mechanics/SBGR.astro'
import Sporesplosion from './_mechanics/Sporesplosion.astro'
import DDAB from './_mechanics/DDAB.astro'
import StrangeSeeds from './_mechanics/StrangeSeeds.astro'
import PowerSlamCast from './_components/PowerSlamCast.astro'
import PowerSlamActivate from './_components/PowerSlamActivate.astro'
import AttackSection from './_components/BruteAbombinatorAttackSection.astro'
import BruteAbombinator from './_components/BruteAbombinator.astro'
import GrapplingIvy from './_components/GrapplingIvy.astro'

import AbominableBlinkCast from './_components/AbominableBlinkCast.astro'
import AbominableBlinkActivate from './_components/AbominableBlinkActivate.astro'
import ThornyDeathmatchCast from './_components/ThornyDeathmatchCast.astro'
import TDAB from './_mechanics/TDAB.astro'
import StoneringerCast from './_components/StoneringerCast.astro'

import BrutishSwingActivate from './_components/BrutishSwingActivate.astro'
import GlowerPowerCast from './_components/GlowerPowerCast.astro'
import GlowerPowerActivate from './_components/GlowerPowerActivate.astro'
import ElectrogeneticForceActivate from './_components/ElectrogeneticForceActivate.astro'
import RevengeOfTheVinesCast from './_components/RevengeOfTheVinesCast.astro'
import RevengeOfTheVinesActivate from './_components/RevengeOfTheVinesActivate.astro'
import BrutishSwingMoveActivate from './_components/BrutishSwingMoveActivate.astro'
import { translations } from './_translations'
import PowerSlam from './_mechanics/PowerSlam.astro'
import NoteSection from '@/components/section/NoteSection.astro'
import P from '@/components/typography/P.astro'
import StratLink from '@/components/StratLink.astro'

const dutyId = '07/m7s'

const base = '02:38.206'
const stoneringer = translations.stoneringer
const brutishSwing = translations.brutishSwing
const glowerPower = translations.glowerPower
const revengeOfTheVines = translations.revengeOfTheVines
const thornyDeathmatch = translations.thornyDeathmatch
const abominableBlink = translations.abominableBlink
const sporesplosion = translations.sporesplosion
const strangeSeeds = translations.strangeSeeds
const powerslam = translations.powerslam
const demolitionDeathmatch = translations.demolitionDeathmatch
---

<DutyStratLayout dutyId={dutyId} base={base}>
  <SeparatorSection />
  <DraftWarning />
  <SeparatorSection />
  <GrapplingIvy time="02:38.206" />
  <EventSection time="02:42.841">
    <BruteAbombinator />挂墙完毕，可选中
  </EventSection>
  <AttackSection time="02:43.372" damage="57000" damageType="physical" />
  <AttackSection time="02:46.402" damage="57000" damageType="physical" />

  <SeparatorSection id="SBGR" title=`${stoneringer} + ${brutishSwing} + ${glowerPower} + ${revengeOfTheVines}` />
  <SBGR />
  <AttackSection time="03:17.190" damage="57000" damageType="physical" />
  <AttackSection time="03:20.219" damage="57000" damageType="physical" />
  <AttackSection time="03:43.624" damage="57000" damageType="physical" />
  <AttackSection time="03:46.656" damage="57000" damageType="physical" />

  <SeparatorSection id="TDAB" title=`${thornyDeathmatch} + ${abominableBlink}` />
  <ThornyDeathmatchCast start="03:22.806" />
  <StoneringerCast start="03:27.928" />
  <AbominableBlinkCast start="03:35.780" />
  <AbominableBlinkActivate time="03:42.064" />
  <TDAB />

  <SeparatorSection id="sporesplosion" title={sporesplosion} />
  <Sporesplosion start="03:47.190" />

  <AttackSection time="04:19.661" damage="57000" damageType="physical" />
  <AttackSection time="04:22.696" damage="57000" damageType="physical" />

  <SeparatorSection id="DDAB" title=`${demolitionDeathmatch} + ${abominableBlink}` />
  <DDAB />

  <AttackSection time="04:42.302" damage="57000" damageType="physical" />
  <SeparatorSection id="strange-seeds" title={strangeSeeds} />
  <StrangeSeeds />

  <SeparatorSection title=`${stoneringer} + ${brutishSwing} + ${glowerPower} + ${revengeOfTheVines}` />
  <BrutishSwingMoveActivate time="05:24.855" />
  <BrutishSwingActivate time="05:28.947" />
  <GlowerPowerCast start="05:29.839" />
  <ElectrogeneticForceActivate time="05:33.672" />
  <GlowerPowerActivate time="05:33.804" />
  <RevengeOfTheVinesCast start="05:34.653" />
  <RevengeOfTheVinesActivate time="05:39.643" />
  <NoteSection>
    <div class="flex flex-col gap-4">
      <P><StratLink variant="yellow" href="#SBGR">SBGR组合技</StratLink>，处理方式与之前相同</P>
    </div>
  </NoteSection>

  <AttackSection time="05:42.223" damage="57000" damageType="physical" />
  <AttackSection time="05:45.255" damage="57000" damageType="physical" />

  <SeparatorSection title={powerslam} />
  <PowerSlamCast time="05:51.804" />
  <PowerSlamActivate time="05:51.804" />
  <PowerSlam />
</DutyStratLayout>
