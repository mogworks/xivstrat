---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import DamageInfo from '@/components/DamageInfo.astro'
import Span from '@/components/Span.vue'

import EventSection from '@/components/section/EventSection.astro'
import { translations } from '../_translations'

interface Props {
  time: Time
  base?: Time
}

const { time, base = 0 }: Props = Astro.props
const smashHereThere = translations.smashHereThere
---

<EventSection time={time} base={base}>
  <Span variant="yellow">{smashHereThere}</Span>
  伤害判定
  <DamageInfo damage="760000" type="physical" />
  <Badge variant="emerald">远/近引导</Badge>
  <Badge variant="emerald">6m圆形</Badge>
  <Badge variant="red">死刑</Badge>
</EventSection>
