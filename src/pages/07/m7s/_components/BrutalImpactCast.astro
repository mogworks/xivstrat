---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import BruteAbombinator from './BruteAbombinator.astro'

interface Props {
  start: Time
  base?: Time

  [key: string]: any
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={4.7}
  ability="Brutal Impact"
  target
  damage="60000"
  damageType="physical"
>
  <BruteAbombinator slot="source" />
  <Badge variant="pink">AoE x6</Badge>
</CastSection>
