---
import type { Time } from '@/lib/utils'

import CastSection from '@/components/section/CastSection.astro'
import EventSection from '@/components/section/EventSection.astro'
import StratInterval from '@/components/StratInterval.astro'
import Span from '@/components/Span.vue'

import BruteAbombinator from './BruteAbombinator.astro'
import { translations } from '../_translations'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
const sinisterSeeds = translations.sinisterSeeds
---

<EventSection>
  <StratInterval slot="time" start={start} base={base} duration={5.0} />
  <Fragment>
    <BruteAbombinator />
    读条
    <Span variant="yellow">{sinisterSeeds}</Span>
  </Fragment>
</EventSection>
