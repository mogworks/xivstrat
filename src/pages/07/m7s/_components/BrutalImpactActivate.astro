---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import DamageInfo from '@/components/DamageInfo.astro'
import Span from '@/components/Span.vue'
import EventSection from '@/components/section/EventSection.astro'

import { translations } from '../_translations'

interface Props {
  time: Time
  base?: Time
  num: number
  toln: number
}

const { time, base = 0, num, toln }: Props = Astro.props
const brutalImpact = translations.brutalImpact
---

<EventSection time={time} base={base}>
  <Span variant="yellow">{brutalImpact}</Span>
  第
  <Span variant="pink">{num}</Span>
  段伤害判定
  <DamageInfo damage="60000" type="physical" />
  <Badge variant="purple">AoE x{toln}</Badge>
</EventSection>
