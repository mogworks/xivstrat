---
import Buff from '@/components/Buff.astro'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const heating_up = 'imgs/buff/07/m6s/214278.png'
const { HeatingUp, HeatingUpDescription } = translations
---

<Buff
  icon={heating_up}
  name={HeatingUp}
  nameVariant="yellow"
  description={HeatingUpDescription}
  tag={tag}
  hover={hover}
  class={className}
/>
