---
import CastSection from '@/components/section/CastSection.astro'
import type { Time } from '@/lib/utils'
import { translations } from '../_translations'
import SugarRiot from './SugarRiot.astro'

interface Props {
  start: Time

  duration: number
}

const { start, duration }: Props = Astro.props
const DoubleStyle = translations.DoubleStyle
---

<CastSection start={start} duration={duration} adjustDuration={false} ability={DoubleStyle}>
  <SugarRiot slot="source" />
  绘制两种图案
</CastSection>
