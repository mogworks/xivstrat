---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import RoleIcon from '@/components/RoleIcon.astro'
import MagicVulnerabilityUp from '@/components/buff/MagicVulnerabilityUp.astro'
import CastSection from '@/components/section/CastSection.astro'

import SugarRiot from './SugarRiot.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={6.7} ability="Color Riot" target damage="330000" damageType="magical">
  <SugarRiot slot="source" />
  <Fragment slot="target">
    <RoleIcon role="all" tag="最远" />
    和
    <RoleIcon role="all" tag="最近" />
  </Fragment>
  <MagicVulnerabilityUp tag="2" hover />
  <Badge variant="emerald">远近引导</Badge>
  <Badge variant="emerald">4m圆形</Badge>
  <Badge variant="red">死刑</Badge>
</CastSection>
