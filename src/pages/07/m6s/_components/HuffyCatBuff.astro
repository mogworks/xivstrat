---
import Buff from '@/components/Buff.astro'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const icon = 'imgs/buff/07/m6s/219486.png'
const { HuffyCat, HuffyCatDescription } = translations
---

<Buff
  icon={icon}
  name={HuffyCat}
  nameVariant="yellow"
  description={HuffyCatDescription}
  tag={tag}
  hover={hover}
  class={className}
/>
