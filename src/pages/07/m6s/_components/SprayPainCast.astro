---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import SprayPain from '../_components/SprayPain.astro'

interface Props {
  start: Time
  base?: Time
  duration?: Time
  num?: number
}

const { start, base = 0, duration = 6.7, num = 5 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={duration} ability="Spray Pain">
  <SprayPain slot="source" num={num} />
  <Fragment slot="cast">逐渐变大并释放</Fragment>
  <Badge variant="emerald">10m圆形</Badge>
</CastSection>
