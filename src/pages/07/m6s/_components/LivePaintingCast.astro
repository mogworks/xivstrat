---
import type { Time } from '@/lib/utils'

import CastSection from '@/components/section/CastSection.astro'

import SugarRiot from './SugarRiot.astro'
import { translations } from '../_translations'

interface Props {
  start: Time

  class?: string
}

const { start, class: className }: Props = Astro.props
const LivePainting = translations.LivePainting
---

<CastSection start={start} duration={3.7} ability={LivePainting} class={className}>
  <SugarRiot slot="source" />
  <slot />
</CastSection>
