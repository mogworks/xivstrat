---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import DotInfo from '@/components/DotInfo.astro'
import SustainedDamage from '@/components/buff/SustainedDamage.astro'
import CastSection from '@/components/section/CastSection.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={4.7} ability="Ore-rigato" target damage="100000" damageType="physical">
  <slot slot="source" />
  <SustainedDamage layer={1} tag="15" hover />
  <DotInfo damage="30000" />
  <Badge variant="pink">AoE</Badge>
</CastSection>
