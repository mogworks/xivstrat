---
import Buff from '@/components/Buff.astro'

import mousse_mine from '@/assets/buff/07/m6s/214277.png'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const { MousseMine, MousseMineDescription } = translations
---

<Buff
  icon={mousse_mine}
  name={MousseMine}
  nameVariant="yellow"
  description={MousseMineDescription}
  tag={tag}
  hover={hover}
  class={className}
/>
