---
import HoverSpan from '@/components/HoverSpan.vue'
import { translations } from '../_translations'
import ColorRiotBombEffect from './ColorRiotBombEffect.astro'

interface Props {
  type: 'cool' | 'warm'
}

const { type }: Props = Astro.props
const { CoolBomb, WarmBomb } = translations
---

<HoverSpan variant={type === 'cool' ? 'blue' : 'orange'} text={type === 'cool' ? CoolBomb : WarmBomb} client:idle>
  <ColorRiotBombEffect type={type} />
</HoverSpan>
