---
import Buff from '@/components/Buff.astro'

import burning_up from '@/assets/buff/07/m6s/214288.png'
import { translations } from '../_translations'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
const { BurningUp, BurningUpDescription } = translations
---

<Buff
  icon={burning_up}
  name={BurningUp}
  nameVariant="yellow"
  description={BurningUpDescription}
  tag={tag}
  hover={hover}
  class={className}
/>
