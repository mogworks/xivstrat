---
import Buff from '@/components/Buff.astro'

import patience_of_wind from '@/assets/buff/07/m8s2/214269.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={patience_of_wind}
  name="Patience of Wind"
  nameVariant="yellow"
  description="Wind aether lurks in the body, waiting to be unleashed upon the surrounding area when this effect expires."
  tag={tag}
  hover={hover}
  class={className}
/>
