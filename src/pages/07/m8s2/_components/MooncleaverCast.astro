---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBlade from '../_components/HowlingBlade.astro'
import GleamingFang from '../_components/GleamingFang.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props

const mooncleaver = '剛刃一閃'
---

<CastSection start={start} base={base} duration={4.7} ability={mooncleaver} target="any" targetTag="1">
  <HowlingBlade slot="source" />
  <Badge variant="green">摧毁平台</Badge>
</CastSection>
