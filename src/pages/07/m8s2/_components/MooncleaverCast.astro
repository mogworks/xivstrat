---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBlade from '../_components/entities/HowlingBlade.astro'
import { translations } from '../_translations'

interface Props {
  start: Time
  target?: boolean
}

const { start, target = true }: Props = Astro.props

const mooncleaver = translations.mooncleaver
//预留target，软狂暴是同一个读条但是不对人
---

{
  target ? (
    <CastSection start={start} duration={4.7} ability={mooncleaver} target="any" targetTag="随机">
      <HowlingBlade slot="source" />
      <Badge variant="green">摧毁平台</Badge>
    </CastSection>
  ) : (
    <CastSection start={start} duration={4.7} ability={mooncleaver}>
      <HowlingBlade slot="source" />
      <Badge variant="green">摧毁分摊平台</Badge>
    </CastSection>
  )
}
