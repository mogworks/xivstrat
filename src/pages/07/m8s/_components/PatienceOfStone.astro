---
import Buff from '@/components/Buff.astro'

import patience_of_stone from '@/assets/buff/07/m8s/214270.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={patience_of_stone}
  name="Patience of Stone"
  nameVariant="yellow"
  description="Earth aether lurks in the body, waiting to be unleashed upon the surrounding area when this effect expires."
  tag={tag}
  hover={hover}
  class={className}
/>